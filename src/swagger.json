{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "feedback",
        "description": "app for reports view",
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "host": "localhost:3000",
    "basePath": "",
    "tags": [{
            "name": "Reports",
            "description": "Api for reports in the system"
        },
        {
            "name": "Users",
            "description": "Api for users in the system"
        }
    ],
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/users/register": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Create a new user in system",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "descripton": "user that we want to create",
                        "schema": {
                            "$ref": "#/definitions/credentials"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200" : {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/user"
                        }
                    }, 
                    "400": {
                        "description": "Failed. Bad post data"
                    }
                }
            }
        },
        "/users/login": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Login as user in the system",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "descripton": "user that we want to create",
                        "schema": {
                            "$ref": "#/definitions/credentials"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200" : {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/user"
                        }
                    }, 
                    "400": {
                        "description": "Failed. Bad post data"
                    }
                }
            }
        },

        "/reports/new-users": {
            "get": {
                "tags": [
                    "Reports"
                ],
                "summary": "List of new users in the system",
                "security": [{
                    "JWT": []
                }],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/newUsersReport"
                        }
                    },
                    "403": {
                        "description": "Forbidden, no access token provided"
                    }
                }
            }
        },
        "/reports/highest-salaries": {
            "get": {
                "tags": [
                    "Reports"
                ],
                "summary": "List of users with higest salary",
                "security": [{
                    "JWT": []
                }],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/higestSalaryReport"
                        }
                    },
                    "403": {
                        "description": "Forbidden, no access token provided"
                    }
                }
            }
        },

        "/reports/top-employees": {
            "get": {
                "tags": [
                    "Reports"
                ],
                "summary": "List of users with higest salary",
                "security": [{
                    "JWT": []
                }],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/topUsersReport"
                        }
                    },
                    "403": {
                        "description": "Forbidden, no access token provided"
                    }
                }
            }
        }
    },

    "definitions":{
        "user": {
            "type": "object",
            "properties": {
                "user": {
                    "type": "object",
                    "properties": {
                        "_id": {
                            "type": "string"
                        },
                        "email": {
                            "type": "string"
                        },
                        "token": {
                            "type": "string"
                        }
                    } 
                }
            }
        },
        "credentials": {
            "type": "object",
            "properties": {
                "user":{
                    "type":"object",
                    "properties":{
                        "email": {
                            "type": "string"
                        },
                        "password": {
                            "type": "string"
                        }
                    }
                }
            }
        },

        "newUser": {
            "type":"object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "lastName": {
                    "type": "string"
                },
                "join_date": {
                    "type": "string"
                }
            }
        },

        "newUsers": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/newUser"
            }
        },

        "newUsersReport": {
            "type": "object",
            "properties": {
                "users":{
                    "$ref":"#/definitions/newUsers"
                }
            }
        },
        "userWithSalary": {
            "type":"object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "lastName": {
                    "type": "string"
                },
                "salary": {
                    "type": "string"
                },
                "salaryUsd": {
                    "type": "string"
                }
            }
        },
    
        "higestSalaryUsers": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/userWithSalary"
            }
        },
    
        "higestSalaryReport": {
            "type": "object",
            "properties": {
                "users":{
                    "$ref":"#/definitions/higestSalaryUsers"
                }
            }
        },

        "userWithBadge": {
            "type":"object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "lastName": {
                    "type": "string"
                },
                "badges": {
                    "type": "array",
                    "items": {
                        "$ref":"#/definitions/badge"
                    }
                }
            }
        },
    
        "topUsers": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/userWithBadge"
            }
        },
    
        "topUsersReport": {
            "type": "object",
            "properties": {
                "users":{
                    "$ref":"#/definitions/topUsers"
                }
            }
        },

        "badge": {
            "type":"object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "data": {
                    "type": "string"
                }
            }
        }

    },

    "securityDefinitions":{
        "JWT": {
          "type": "apiKey",
          "in": "header",
          "name": "Authorization"
        }
    }
}